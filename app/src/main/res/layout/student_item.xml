<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    android:elevation="6dp"
    app:cardCornerRadius="12dp"
    android:backgroundTint="@android:color/transparent"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="20dp">

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="student@email.com"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password: ******"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textCourses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Courses: None"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:weightSum="3">

            <Button
                android:id="@+id/buttonAssign"
                style="@style/DashboardButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Assign\nCourses"
                android:textSize="8sp"
                android:minHeight="48dp"
                android:gravity="center"
                android:layout_marginEnd="4dp"
                android:padding="0dp"/>

            <Button
                android:id="@+id/buttonEdit"
                style="@style/DashboardButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit"
                android:textSize="10dp"
                android:minHeight="48dp"
                android:gravity="center"
                android:layout_marginHorizontal="4dp"
                android:padding="0dp"/>

            <Button
                android:id="@+id/buttonReport"
                style="@style/DashboardButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Report"
                android:textSize="10dp"
                android:minHeight="48dp"
                android:gravity="center"
                android:layout_marginStart="4dp"
                android:padding="0dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:layout_marginTop="0dp"
            android:baselineAligned="false">

            <Button
                android:id="@+id/buttonResetPassword"
                style="@style/DashboardButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset Password"
                android:minHeight="48dp"
                android:textSize="8dp"
                android:padding="0dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/buttonRemoveCourse"
                style="@style/RedDashboardButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:padding="0dp"
                android:text="Remove Course"
                android:textSize="8dp" />

            <Button
                android:id="@+id/buttonDelete"
                style="@style/RedDashboardButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete"
                android:minHeight="48dp"
                android:textSize="8dp"
                android:padding="0dp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutManageMaterials"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="24dp"
    tools:context=".ui.teacher.ManageMaterialsActivity">

    <!-- Card Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:padding="20dp"
        android:background="@drawable/card_background"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Course Materials"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#2E3A59"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp" />

            <!-- Course Filter Spinner -->
            <Spinner
                android:id="@+id/spinnerCourseFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="16dp" />

            <!-- Upload Material Button -->
            <Button
                android:id="@+id/buttonUploadNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload New Material"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/button_color"
                android:drawableLeft="@android:drawable/ic_menu_upload"
                android:drawablePadding="8dp"
                android:layout_marginBottom="16dp" />

            <!-- RecyclerView for Materials -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewMaterials"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="vertical"
                android:background="#F9F9F9"
                android:clipToPadding="false"
                android:padding="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
